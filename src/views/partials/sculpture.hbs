<section class="slide whiteSlide page-4">
  {{> navBar/logoWithSideNav }}
  <div class="content">
    <div class="container">
      <div class="wrap left">
      
        <!-- Slide contents -->
        <div class="grid equal">
          <div class="col-6-12 left equalElement">
              <img src={{@root.sculpture.img1.src}} width="100%" alt="">
              <h1 class="">{{@root.sculpture.img1.title}}</h1>
              <p class="" style="margin-bottom: 0px">
              <sub>{{@root.sculpture.img1.year}}<br>
              {{@root.sculpture.img1.medium}}<br>
              {{@root.sculpture.img1.size}}<br>
              {{@root.sculpture.img1.collection}}</sub>
              </p>
          </div>

          <div class="col-6-12 equalElement">
            <h2 class="georgeTestSize">{{@root.sculpture.title}}</h2>
            <p><a href="#">{{@root.sculpture.portfolioLink}}</a></p>
            <p class="">
            {{@root.sculpture.description}}</p>
          </div>
           {{!--arrow to next page--}}
          <div class="col-12-12">
            <div class="ae-1 nextSlide">
              <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#arrow-down"></use></svg>
            </div>
          </div
      </div>

      </div><!-- /.wrap -->
    </div>
  </div>
  <!--<div class="background" style="background: rgb(51,49,49);"></div>-->
</section>
