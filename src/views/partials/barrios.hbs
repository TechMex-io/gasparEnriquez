<section class="slide whiteSlide page-2">
  {{> navBar/logoWithSideNav }}
  <div class="content">
    <div class="container">
      <div class="wrap left">
        
        <!-- Slide contents -->
        <div class="grid equal">
          <div class="col-6-12 equalElement left">
            <div class="ae-3">
              <h2 class="series-title uppercase">{{ @root.barrios.title }}</h2>
              <p><a href="#">{{ @root.barrios.portfolioLink }}</a></p>
              <p class="">
                {{ @root.barrios.description }}
              </p>
              <div class="col-8-12 rellax right" data-rellax-speed="6">
                <img src="/assets/img/Symbol.svg" alt="" width="400" class="symbol">
              </div>
            </div>
              
          </div>
          
          <div class="col-6-12 equalElement">
                <img src={{ @root.barrios.img1.src }} width="80%" alt="" class="">
                <h5 class="">{{ @root.barrios.img1.title }}</h5>
                <p class="">
                <sub>{{ @root.barrios.img1.year }}<br>
                {{ @root.barrios.img1.medium }}<br>
                {{ @root.barrios.img1.size }}<br>
                {{ @root.barrios.img1.collection }}</sub>
                </p>
          </div>
          {{!--arrow to next page--}}
          <div class="col-12-12">
            <div class="ae-1 nextSlide">
              <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#arrow-down"></use></svg>
            </div>
          </div>
      </div>

      </div><!-- /.wrap -->
    </div>
  </div>
  <!--<div class="background" style="background: rgb(51,49,49);"></div>-->
</section>
